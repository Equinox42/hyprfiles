# ---------------------------
# -- AWS --
# ---------------------------

function awsp() {
  local profile
  profile=$(sed -n 's/^\[profile \(.*\)\]/\1/p' ~/.aws/config | fzf)
  if [[ -n "$profile" ]]; then
    export AWS_PROFILE="$profile"
    echo "Switched to AWS_PROFILE=$AWS_PROFILE"
  fi
}

